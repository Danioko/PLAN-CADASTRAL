// ===============================
// EXPORT PDF AVEC PLAN DE SITUATION
// ===============================
async function exportParcellePDFAvecPlan(feature, layer) {

    const { jsPDF } = window.jspdf;
    const doc = new jsPDF("portrait", "mm", "a4");

    // Zoom sur la parcelle
    var bounds = layer.getBounds();
    map.fitBounds(bounds.pad(0.3));

    // Pause pour le rendu
    await new Promise(r => setTimeout(r, 800));

    // Capture de la carte
    var mapElement = document.getElementById("map");
    const canvas = await html2canvas(mapElement, {
        useCORS: true,
        scale: 2
    });

    var imgData = canvas.toDataURL("image/png");

    // Titre
    doc.setFontSize(14);
    doc.text("FICHE PARCELLAIRE ‚Äì AUACAD", 20, 15);

    // Infos attributaires
    doc.setFontSize(10);
    doc.text("Lot : " + (feature.properties.lot || ""), 20, 25);
    doc.text("Nature : " + (feature.properties.nature || ""), 20, 32);
    doc.text("Cercle : " + (feature.properties.cercle || ""), 20, 39);
    doc.text("Localit√© : " + (feature.properties.localite || ""), 20, 46);
    doc.text("Surface (m¬≤) : " + (feature.properties["Aire m¬≤"] || ""), 20, 53);
    doc.text("TF Global : " + (feature.properties["TF Global"] || ""), 20, 60);

    // Plan de situation
    doc.addImage(imgData, "PNG", 20, 70, 170, 110);

    // Pied de page
    doc.setFontSize(8);
    doc.text(
        "Document g√©n√©r√© depuis la webmap AUACAD ‚Äì usage indicatif",
        20,
        190
    );

    // Sauvegarde
    doc.save(
        "Fiche_Parcelle_" +
        (feature.properties.lot || "AUACAD") +
        ".pdf"
    );
}

// ===============================
// RECHERCHE PAR COORDONN√âES
// ===============================

var coordMarker;

// D√©finition des projections UTM
proj4.defs("UTM29", "+proj=utm +zone=29 +datum=WGS84 +units=m +no_defs");
proj4.defs("UTM30", "+proj=utm +zone=30 +datum=WGS84 +units=m +no_defs");
proj4.defs("UTM31", "+proj=utm +zone=31 +datum=WGS84 +units=m +no_defs");

document.getElementById("coord-search-btn").onclick = function () {

    var x = parseFloat(document.getElementById("coord-x").value);
    var y = parseFloat(document.getElementById("coord-y").value);
    var system = document.getElementById("coord-system").value;

    if (isNaN(x) || isNaN(y)) {
        alert("Veuillez saisir des coordonn√©es valides.");
        return;
    }

    var latlng;

    if (system === "wgs84") {
        latlng = [y, x];
    }

    if (system === "utm29") {
        var p29 = proj4("UTM29", "WGS84", [x, y]);
        latlng = [p29[1], p29[0]];
    }

    if (system === "utm30") {
        var p30 = proj4("UTM30", "WGS84", [x, y]);
        latlng = [p30[1], p30[0]];
    }
	
	if (system === "utm31") {
    var p31 = proj4("UTM31", "WGS84", [x, y]);
    latlng = [p31[1], p31[0]];
}

    if (coordMarker) map.removeLayer(coordMarker);

    coordMarker = L.marker(latlng).addTo(map)
        .bindPopup(
            "<b>Position localis√©e</b><br>" +
            "Latitude : " + latlng[0] + "<br>" +
            "Longitude : " + latlng[1]
        )
        .openPopup();

    map.setView(latlng, 19);
};
map.on('click', function(e) {
    var lat = e.latlng.lat.toFixed(6);
    var lon = e.latlng.lng.toFixed(6);

    L.popup()
        .setLatLng(e.latlng)
        .setContent(
            "<b>Coordonn√©es du point</b><br>" +
            "Latitude : " + lat + "<br>" +
            "Longitude : " + lon
        )
        .openOn(map);
});

// ===============================
// AFFICHER / MASQUER COORDONN√âES
// ===============================

document.getElementById("coord-toggle-btn").onclick = function () {
    var box = document.getElementById("coord-search-box");
    box.style.display = (box.style.display === "none" || box.style.display === "")
        ? "block"
        : "none";
};

document.getElementById("coord-close-btn").onclick = function () {
    document.getElementById("coord-search-box").style.display = "none";
};

